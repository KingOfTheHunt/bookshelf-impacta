@model Bookshelf.Web.ViewModels.Account.LoginAccountViewModel;

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="login-container">
                <h2 class="mb-4">Login</h2>
                <form asp-action="Index">
                    <div class="mb-3">
                        <label asp-for="Login" class="form-label">Login:</label>
                        <input asp-for="Login" type="text" class="form-control" placeholder="Digite seu login">
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Senha:</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Digite sua senha">
                    </div>
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </form>
                <div class="col-md-6 offset-md-3">
                    <a class="nav-link" asp-controller="Account" asp-action="SignUp">Clique aqui para criar uma conta</a>
                </div>
            </div>
        </div>
    </div>
</div>