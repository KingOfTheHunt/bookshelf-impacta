@model Bookshelf.Web.ViewModels.Account.ChangePassowordAccountViewModel;

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">Alterar Senha</h2>
            <form asp-action="ChangePassword">
                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">Nova Senha</label>
                    <input type="password" asp-for="NewPassword" class="form-control" size="20" required>
                </div>
                <button type="submit" class="btn btn-primary">Alterar Senha</button>
                <a class="btn btn-secondary" asp-action="Profile">Voltar</a>
            </form>
        </div>
    </div>
</div>